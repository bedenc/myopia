<!--miniprogram/pages/myopia/myopia2018.wxml-->
<form bindsubmit="queryMyopia">
<view class="section">
  <view class="section__title">选择学校</view>
  <picker mode="multiSelector" bindchange="bindMultiPickerChange"
    bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}" range-key="name">
    <view class="picker">{{multiArray[0][multiIndex[0]].name}}{{multiArray[1][multiIndex[1]].name}}</view>
  </picker>
</view>
          <view class="contain" style="flex-direction:row">
    姓名:
    <input name="name" type="text" maxlength="10" placeholder="" /><br/>身份证号码:
    <input name="id3" type="idcard" maxlength="18" value='130503201301240050' placeholder="身份证号" />
  </view>
          <button form-type="submit">查询</button>
</form>
<view class="context">
<text class='h2'>视力检查结果{{}}</text>
<rich-text nodes="{{shili}}" bindtap="tap"></rich-text>
<rich-text>
{{instruction}}
</rich-text>
</view>

